{% extends 'admin.html.twig' %}

{% block title %}Page Book !{% endblock %}

{% block body %}
  <div className="page-heading pb-2 mt-4 mb-2" > 
                    <h3 style="text-align: center;">Book Manager</h3>  <a href="{{path('book_create')}}"><button type="button" class="btn btn-outline-primary">Insert</button></a>
                </div>
                <div class="page-content">
                <div class="btn-group" role="group" aria-label="Basic outlined example">
               
                </div>
                <div class="card">
                    <div class="container mb-3">
                        <div class="table-responsive text-nowrap">
                      <table class="table table-striped">
                        <thead>
                          <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Author</th>
                            <th>Description</th>
                            <th>Category</th>
                            <th>Action</th>
                          </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                          {% for b in book %}
                              <tr>
                                  <td>{{ b.id}}</td>
                                  <td>{{ b.name}}</td>
                                  <td>{{ b.bookauthor.name}}</td>
                                  <td>{{ b.booktype.bookCategory}}</td>
                                  <td>{{ b.discription}}</td>
                                  <td>
                                    <a href="{{path('book_edit',{'id':b.id})}}">Edit</a>
                                  <a href="{{path('book_delete',{'id':b.id})}}">Delete</a></td>
                              </tr>
                          {% endfor %}
                          
                        </tbody>
                      </table>
                    </div>
                </div>
                </div>
                </div>
{% endblock %}
