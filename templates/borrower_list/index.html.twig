{% extends 'admin.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
  <div className="page-heading pb-2 mt-4 mb-2 " style="text-align:center;"> 
                    <h3><strong>List Borrower Manager</strong></h3> 
                    </div>
                    <div  <a href="{{path('borrowerlist_create')}}"><button type="button" class="btn btn-outline-primary">Insert</button></a>
                </div>
                <div class="page-content">
                <div class="btn-group" role="group" aria-label="Basic outlined example">
               
                </div>
                <div class="card">
                    <div class="container mb-3">
                        <div class="table-responsive text-nowrap">
                      <table class="table table-striped">
                        <thead>
                          <tr>
                            <th>ID</th>
                            <th>User Name</th>
                            <th>Book Name</th>
                            <th>Borrowed Date</th>
                            <th>Return Date</th>
                            <th>Status</th>
                            {# <th>Quantity</th> #}
                            <th>Action</th>
                          </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                          {% for bl in borrowerlist %}
                              <tr>
                                  <td>{{ bl.id}}</td>
                                  <td>{{ bl.userbr}}</td>
                                  <td>{{ bl.book}}</td>
                                  <td>{{ bl.borrowedDate|date("m/d/Y")}}</td>
                                  <td>{{ bl.returnDate|date("m/d/Y")}}</td>
                                  <td>{{ bl.status}}</td>
                                  <td>
                                    <a href="{{path('borrowerlist_edit',{'id':bl.id})}}">Edit</a>
                                  <a href="{{path('borrowerlist_delete',{'id':bl.id})}}">Delete</a>
                                  </td>
                              </tr>
                          {% endfor %}
                          
                        </tbody>
                      </table>
                    </div>
                </div>
                </div>
                </div>
{% endblock %}
