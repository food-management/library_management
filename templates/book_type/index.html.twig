{% extends 'admin.html.twig' %}

{% block title %}Book Type Page!{% endblock %}

{% block body %}
  <div className="page-heading pb-2 mt-4 mb-2 ">
                    <h3 style="text-align: center;">Book Type Manager</h3> <a href="{{path('booktype_create')}}"><button type="button" class="btn btn-outline-primary">Insert</button></a>
                </div>
                <div class="page-content">
                <div class="btn-group" role="group" aria-label="Basic outlined example">
               
                </div>
                <div class="card">
                    <div class="container mb-3">
                        <div class="table-responsive text-nowrap">
                      <table class="table table-striped">
                        <thead>
                          <tr>
                            <th>ID</th>
                            <th>Book Category</th>
                            
                            {# <th>Author</th> #}
                            {# <th>Discription</th> #}
                            {# <th>Quantity</th> #}
                            <th>Action</th>
                          </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                          {% for bt in booktypes %}
                              <tr>
                                  <td>{{ bt.id}}</td>
                                  <td>{{ bt.bookCategory}}</td>
                                  
                                  <td>
                                    <a href="{{path('booktype_edit',{'id':bt.id})}}">Edit</a>
                                  <a href="{{path('booktype_delete',{'id':bt.id})}}">Delete</a></td>
                              </tr>
                          {% endfor %}
                          
                        </tbody>
                      </table>
                    </div>
                </div>
                </div>
                </div>
{% endblock %}
